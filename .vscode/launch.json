    "version": "0.2.0",
    "configurations": [
        {
            "name": "Video-Hub Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/app/video_hub/src",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Auth-Server Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/app/auth_server/src",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}